                    <div class="member-item" data-member-id="<%= member._id %>">
                        <span><%= member.name %> <%= member.surname %></span>
                        <span class="member-remove" title="√úyeyi kaldƒ±r">&times;</span>
                    </div>
                <% }) %>
            </div>

            <!-- hidden input ile kaldƒ±rƒ±lan √ºyelerin id'lerini g√∂ndereceƒüiz -->
            <input type="hidden" name="removedMembers" id="removedMembers" value="[]" />

            <button type="submit" class="save-btn">Kaydet</button>
        </form>
    </div>
</div>
    
<script>
    const editModal = document.getElementById("editModal");
    const editButton = document.getElementById("editButton");
    const editModalClose = document.getElementById("editModalClose");
    const removedMembersInput = document.getElementById("removedMembers");
    const memberList = document.getElementById("memberList");

    let removedMembers = [];

    editButton.onclick = () => {
        editModal.style.display = "block";
        removedMembers = [];
        updateRemovedMembersInput();
    };

    editModalClose.onclick = () => {
        editModal.style.display = "none";
        resetRemovedMembers();
    };

    window.onclick = (event) => {
        if (event.target === editModal) {
            editModal.style.display = "none";
            resetRemovedMembers();
        }
    };

    // ‚ú® Delege event: yeni √ºyeler i√ßin de √ßalƒ±≈üƒ±r
    memberList.addEventListener("click", function (e) {
        if (e.target.classList.contains("member-remove")) {
            const memberDiv = e.target.closest(".member-item");
            const memberId = memberDiv.getAttribute("data-member-id");

            if (confirm("Bu √ºyeyi ligden kaldƒ±rmak istediƒüinizden emin misiniz?")) {
                memberDiv.remove();
                removedMembers.push(memberId);
                updateRemovedMembersInput();
            }
        }
    });

    function updateRemovedMembersInput() {
        removedMembersInput.value = JSON.stringify(removedMembers);
        console.log("Removed members input g√ºncellendi:", removedMembersInput.value);
    }

    function resetRemovedMembers() {
        removedMembers = [];
        updateRemovedMembersInput();
    }
</script>

    <script>

        
        function showTab(tabId) {
    // T√ºm sekmeleri gizle
    document.querySelectorAll('.tab-content').forEach(tab => {
        tab.style.display = 'none';
    });

    // ƒ∞lgili sekmeyi g√∂ster
    const selectedTab = document.getElementById(tabId);
    if (selectedTab) {
        selectedTab.style.display = 'block';
    }
}
        document.addEventListener("DOMContentLoaded", function() {
        // Modal elementini se√ßiyoruz
        const modal = document.getElementById("resultModal");
        const openModalButton = document.getElementById("openModal");
        const closeModalButton = document.getElementById("closeModal");

        // Modal'ƒ± a√ßmak i√ßin buton
        openModalButton.onclick = function() {
            modal.style.display = "block";  // Modal'ƒ± g√∂ster
        }

        // Modal'ƒ± kapatmak i√ßin buton
        closeModalButton.onclick = function() {
            modal.style.display = "none";  // Modal'ƒ± gizle
        }

        // Modal dƒ±≈üƒ±nda bir yere tƒ±klanƒ±rsa modal'ƒ± kapat
        window.onclick = function(event) {
            if (event.target === modal) {
                modal.style.display = "none";  // Modal'ƒ± gizle
            }
        }
    });
    function sortTable(tableId, columnIndex) {
  const table = document.getElementById(tableId);
  const rows = Array.from(table.rows).slice(1);
  const isAsc = table.getAttribute("data-sort") !== "asc";
  table.setAttribute("data-sort", isAsc ? "asc" : "desc");

  rows.sort((a, b) => {
    const aVal = a.cells[columnIndex].innerText.replace('%', '');
    const bVal = b.cells[columnIndex].innerText.replace('%', '');
    return isAsc ? aVal - bVal : bVal - aVal;
  });

  rows.forEach(row => table.tBodies[0].appendChild(row));
}


    </script>

